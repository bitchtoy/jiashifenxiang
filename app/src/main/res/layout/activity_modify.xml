<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/color_F4F8F9"
                                     android:orientation="vertical"
                                     tools:ignore="PxUsage">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        android:layout_marginBottom="20px"/>

    <LinearLayout
        android:id="@+id/nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.sequoia.vehicle.rental.ui.edittext.EditTextWithDel
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/color_FFFFFF"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:singleLine="true"
            android:textSize="28px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text="@string/edit_desc"
            android:textColor="@color/color_999999"
            android:textSize="24px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mobile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:singleLine="true"
                android:textSize="32px"/>

            <TextView
                android:id="@+id/tv_sms"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:background="@drawable/sms_bg"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_333333"
                android:textSize="28px"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F4F8F9"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_sms"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:hint="请输入验证码"
            android:textSize="32px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F4F8F9"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@null"
            android:hint="请输入密码"
            android:textSize="32px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F4F8F9"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_re_password"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@null"
            android:hint="请再次输入密码"
            android:textSize="32px"/>
    </LinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_modify"
        android:layout_width="650px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:text="@string/modify_immediately"
        android:textColor="@color/qmui_main_color"
        android:textSize="16sp"
        app:qmui_backgroundColor="@color/color_FF5C60"
        app:qmui_borderWidth="0dp"
        app:qmui_isRadiusAdjustBounds="false"
        app:qmui_radius="5dp"/>
</com.zhy.autolayout.AutoLinearLayout>