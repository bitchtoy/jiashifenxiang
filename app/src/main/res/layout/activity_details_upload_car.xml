<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_F4F8F9"
              android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="1px"
        android:background="@color/color_FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="车牌号"
            android:textColor="@color/color_333333"
            android:textSize="28px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="60px"
        android:paddingRight="60px">

        <TextView
            android:id="@+id/tv_attr"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/car_icon_click"
            android:gravity="center_vertical"
            android:text="京A"
            android:textColor="@color/color_333333"
            android:textSize="28px"
            tools:ignore="RtlHardcoded"/>

        <EditText
            android:id="@+id/et_attr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:hint="@string/please_license_plate_number"
            android:paddingRight="40px"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_C7C7CD"
            android:textSize="28px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="1px"
        android:background="@color/color_FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="车牌型号"
            android:textColor="@color/color_333333"
            android:textSize="28px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="60px"
        android:paddingRight="60px">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="型号"
            android:textColor="@color/color_333333"
            android:textSize="28px"
            tools:ignore="RtlHardcoded"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入车辆型号"
            android:paddingRight="40px"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_C7C7CD"
            android:textSize="28px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="1px"
        android:background="@color/color_FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交车地点"
            android:textColor="@color/color_333333"
            android:textSize="28px"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请输入"
            android:textColorHint="@color/color_C7C7CD"
            android:textSize="28px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="1px"
        android:background="@color/color_FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆价值"
            android:textColor="@color/color_333333"
            android:textSize="28px"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="请输入"
            android:textColorHint="@color/color_C7C7CD"
            android:textSize="28px"/>

    </LinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="180px"
        android:text="@string/order_confirm"
        android:textColor="@color/qmui_main_color"
        android:textSize="16sp"
        app:qmui_backgroundColor="@color/color_FF5C60"
        app:qmui_borderWidth="0dp"
        app:qmui_isRadiusAdjustBounds="false"
        app:qmui_radius="6dp"/>
</LinearLayout>