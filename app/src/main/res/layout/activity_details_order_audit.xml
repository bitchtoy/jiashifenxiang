    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_audit_completed"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_margin="50px"
        android:text="@string/audit_completed"
        android:textColor="@color/qmui_main_color"
        android:textSize="16sp"
        android:visibility="gone"
        app:qmui_backgroundColor="@color/color_FF5C60"
        app:qmui_borderWidth="0dp"
        app:qmui_isRadiusAdjustBounds="false"
        app:qmui_radius="6dp"/>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_margin="50px"
        android:text="@string/order_confirm"
        android:textColor="@color/qmui_main_color"
        android:textSize="16sp"
        android:visibility="gone"
        app:qmui_backgroundColor="@color/color_FF5C60"
        app:qmui_borderWidth="0dp"
        app:qmui_isRadiusAdjustBounds="false"
        app:qmui_radius="6dp"/>

</LinearLayout>