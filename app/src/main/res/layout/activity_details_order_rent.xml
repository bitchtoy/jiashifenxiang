<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:ignore="PxUsage">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_F4F8F9">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FFFFFF"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="30px">


                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="330px"
                    android:layout_height="210px"
                    android:layout_margin="50px"
                    android:src="@drawable/timg"
                    tools:ignore="PxUsage"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="雪佛兰 科鲁兹三厢"
                        android:textColor="@color/color_333333"
                        android:textSize="28px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="￥999/日"
                        android:textColor="@color/color_FF5C60"
                        android:textSize="36px"/>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:text="2016 | 0.66万公里 | 2.0L"
                    android:textColor="@color/color_999999"
                    android:textSize="24px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/audit_icon_address"
                    android:drawablePadding="24px"
                    android:gravity="center_vertical"
                    android:text="石家庄市桥西区海悦天地"
                    android:textColor="@color/color_666666"
                    android:textSize="28px"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lease_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:layout_marginBottom="1px"
                    android:background="@color/color_FFFFFF"
                    android:drawableLeft="@drawable/black_rectangle"
                    android:drawablePadding="20px"
                    android:gravity="center_vertical"
                    android:text="@string/lease_info"
                    android:textSize="32px"
                    tools:ignore="RtlHardcoded"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="134px"
                    android:background="@color/color_FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                        android:layout_width="94px"
                        android:layout_height="94px"
                        android:src="@drawable/test"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="我是租客"
                            android:textColor="@color/color_333333"
                            android:textSize="32px"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="15701010010"
                            android:textColor="@color/color_666666"
                            android:textSize="24px"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="30px"
                        android:paddingRight="30px"
                        android:src="@mipmap/my_btn_phone"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginBottom="1px"
                    android:background="@color/color_FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="时间"/>

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-06-06"
                        android:textColor="@color/color_333333"
                        android:textSize="28px"/>

                    <TextView
                        android:id="@+id/tv_lease_term"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="--"
                        android:textColor="@color/color_999999"
                        android:textSize="26px"/>


                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-05-06"
                        android:textColor="@color/color_333333"
                        android:textSize="28px"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@color/color_FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取车证件"
                        android:textColor="@color/color_333333"
                        android:textSize="28px"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="身份证+行驶证"
                        android:textColor="@color/color_666666"
                        android:textSize="28px"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_F4F8F9"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginBottom="1px"
                    android:background="@color/color_FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租金"
                        android:textColor="@color/color_333333"
                        android:textSize="28px"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="￥123546"
                        android:textColor="@color/color_FFA631"
                        android:textSize="28px"/>
                </LinearLayout>
            </LinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vehicle_deposit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_FFA631"
            android:gravity="center"
            android:text="@string/vehicle_deposit"
            android:textColor="@color/color_FFFFFF"
            android:textSize="32px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_FFA631"
            android:gravity="center"
            android:text="@string/order_cancel"
            android:textColor="@color/color_FFFFFF"
            android:textSize="32px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_FF5C60"
            android:gravity="center"
            android:text="@string/order_confirm"
            android:textColor="@color/color_FFFFFF"
            android:textSize="32px"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_FF5C60"
            android:gravity="center"
            android:text="@string/order_edit"
            android:textColor="@color/color_FFFFFF"
            android:textSize="32px"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_illegal_deposit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_FF5C60"
            android:gravity="center"
            android:text="@string/illegal_deposit"
            android:textColor="@color/color_FFFFFF"
            android:textSize="32px"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>