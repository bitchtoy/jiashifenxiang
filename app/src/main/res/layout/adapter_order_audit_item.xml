<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="326px"
              android:layout_marginBottom="20px"
              android:background="@color/color_FFFFFF"
              android:orientation="vertical"
              tools:ignore="PxUsage">

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:textColor="@color/color_999999"
        android:textSize="28px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_F4F8F9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="156px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_order"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="60px"
            android:scaleType="fitXY"
            android:src="@drawable/timg"
            tools:ignore="RtlHardcoded"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30px"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tv_car_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="40px"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="28px"/>

            <TextView
                android:id="@+id/tv_car_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_F4F8F9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/order_delete"
            android:textColor="@color/color_FFA631"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/order_cancel"
            android:textColor="@color/color_FFA631"
            android:visibility="gone"/>

        <View
            android:layout_width="2px"
            android:layout_height="50px"
            android:background="@color/color_F4F8F9"/>

        <TextView
            android:id="@+id/tv_audit_completed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/audit_completed"
            android:textColor="@color/color_FF5C60"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_see_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/order_see_details"
            android:textColor="@color/color_FF5C60"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/order_confirm"
            android:textColor="@color/color_FF5C60"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>