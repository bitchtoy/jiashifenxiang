<?xml version="1.0" encoding="utf-8"?>
<com.sequoia.vehicle.rental.ui.AutoCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300px"
    android:layout_gravity="center"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:layout_marginTop="-20px"
    app:cardBackgroundColor="@color/color_FFFFFF"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="40px"
                android:drawablePadding="10px"
                android:drawableRight="@mipmap/home_nabla_black"
                android:gravity="center_vertical"
                android:text="@string/default_location_text"
                android:textColor="@color/color_333333"
                android:textSize="24px"
                tools:ignore="RtlHardcoded"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/home_address_right"
                android:drawablePadding="10px"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="河北省石家庄市桥西区海悦天地河北省石家庄市桥西区海悦天地河北省石家庄市桥西区海悦天地"
                android:textColor="@color/color_333333"
                android:textSize="24px"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F4F8F9"/>

        <LinearLayout
            android:id="@+id/start_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/start_car"
                    android:textColor="@color/color_999999"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5px"
                    android:text="@string/choose_start_car_time"
                    android:textColor="@color/color_333333"
                    android:textSize="28px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lease_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15px"
                    android:textColor="@color/color_999999"
                    android:textSize="24px"/>

                <View
                    android:layout_width="80px"
                    android:layout_height="3px"
                    android:layout_marginBottom="10px"
                    android:background="@color/color_999999"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/end_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/end_car"
                    android:textColor="@color/color_999999"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_marginTop="5px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/choose_end_car_time"
                    android:textColor="@color/color_333333"
                    android:textSize="28px"/>

            </LinearLayout>

        </LinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_find_car"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:text="@string/find_car"
            android:textColor="@color/color_FFFFFF"
            android:textSize="28px"
            app:qmui_backgroundColor="@color/color_FF5C60"
            app:qmui_borderWidth="0dp"
            app:qmui_isRadiusAdjustBounds="false"
            app:qmui_radius="10px"/>
    </LinearLayout>
</com.sequoia.vehicle.rental.ui.AutoCardView>
