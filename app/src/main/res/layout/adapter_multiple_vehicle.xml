<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingTop="15px"
              tools:ignore="PxUsage,RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="30px">

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15px"
            android:layout_weight="1"
            android:background="@drawable/home_bg_rent"
            android:orientation="vertical"
            android:paddingLeft="16px"
            android:paddingRight="16px">

            <TextView
                android:id="@+id/left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginTop="25px"
                android:text="@string/vehicle_investment"
                android:textColor="@android:color/white"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/left_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/vehicle_investment"
                android:textColor="@android:color/white"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15px"
            android:layout_weight="1"
            android:background="@drawable/home_bg_mortgage"
            android:orientation="vertical"
            android:paddingLeft="16px"
            android:paddingRight="16px">

            <TextView
                android:id="@+id/right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginTop="25px"
                android:text="@string/my_car"
                android:textColor="@android:color/white"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/right_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/my_car"
                android:textColor="@android:color/white"
                android:textSize="24px"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="15px"
        android:background="@color/color_F4F8F9"/>

</LinearLayout>